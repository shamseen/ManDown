<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ManDown.MainPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="15">
            <Label Text="Patent:" FontSize="Medium"/>
            <Label Text="Binding PatientInfo" FontSize="Default"/>

            <Label Text="Emergency Contact:" FontSize="Medium"/>
            <Label Text="Binding ContactInfo" FontSize="Default"/>
            
            
            <Button x:Name="connectButton" Text="Connect to ManDown Device" IsEnabled="true" Clicked="OnConnect" TextColor="White" BackgroundColor="Blue"/>
            <Button x:Name="alertButton" Text="OH SHIT SON" IsEnabled="true" Clicked="OnAlert" TextColor="White" BackgroundColor="Red" />
            <Button x:Name="historyButton" Text="View History" IsEnabled="false" Clicked="OnCallHistory" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>